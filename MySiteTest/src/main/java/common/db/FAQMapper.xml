<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FAQMapper">
    <select id="getAllFAQs" resultType="FAQVO">
        SELECT faq_id, question, author, answer, created_at 
        FROM FAQs 
        ORDER BY faq_id DESC
    </select>

    <insert id="insertFAQ">
        INSERT INTO FAQs (question, author) VALUES (#{question}, #{author})
    </insert>

    <delete id="deleteFAQ">
        DELETE FROM FAQs WHERE faq_id = #{faqId}
    </delete>
</mapper>
